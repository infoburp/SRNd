      <form action="settings?${board_id}" enctype="multipart/form-data" method="POST" style="text-align: center;">
        <table class="datatable">
          <tr>
            <th align="right">ID</th>
            <td>${board_id}</td>
          </tr>
          <tr>
            <th align="right">Board name</th>
            <td>${board}</td>
          <tr>
            <th align="right">flags</th>
            <td>${modify_key_flagset}</td>
          </tr>
          <tr>
            <th align="right">local name</th>
            <td><input type="text" name="ph_name" value="${ph_name}" class="posttext" maxlength="42"/></td>
          </tr>
          <tr>
            <th align="right">local shortname</th>
            <td><input type="text" name="ph_shortname" value="${ph_shortname}" class="posttext" maxlength="42"/></td>
          </tr>
          <tr>
            <th align="right">replace link</th>
            <td><input type="text" name="link" value="${link}" class="posttext"/></td>
          </tr>
          <tr>
            <th align="right">tag</th>
            <td><input type="text" name="tag" value="${tag}" class="posttext" maxlength="42"/></td>
          </tr>
          <tr>
            <th align="right">description</th>
            <td><textarea class="postarea" name="description">${description}</textarea></td>
          </tr>
          <tr>
            <td>&nbsp;</td>
            <td align="right"><input type="submit" value="modify" class="postbutton" /></td>
          </tr>
        </table>
      </form>
